<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:id="@+id/callrecord_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/text_call" android:layout_width="80dp" android:layout_height="80dp" android:text="撥出"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/callrecord_Name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Large Text"/>
            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/callrecord_phone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Large Text"/>
            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/callrecord_Date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Large Text"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
